---
import InputLabel from '@/components/InputLabel.astro';

interface Props {
  name: string;
  label: string;
  content: string;
  placeholder?: string;
  required?: boolean;
}

const { name, label, content, placeholder = '', required = true } = Astro.props;

const cls = [
  "block w-full px-4 border border-gray-300 rounded-lg shadow-sm",
  "focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
  "resize-none font-mono text-sm",
  "bg-gray-50 text-gray-900 placeholder-gray-500",
  "transition-colors duration-200"
]

---
<div>
  <InputLabel name="code" label="Code to Review" />

  <div class="relative">
    <textarea id={name} name={name} rows="20" required={required} placeholder={placeholder} class:list={cls}>{content}</textarea>

    <!-- Pseudo-console traffic light buttons -->
    <div class="absolute top-3 right-3">
      <div class="flex space-x-1">
        <div class="w-3 h-3 rounded-full bg-red-400"></div>
        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
        <div class="w-3 h-3 rounded-full bg-green-400"></div>
      </div>
    </div>
  </div>

  <p class="mt-2 text-sm text-gray-500">
    Our trained ferrets accept code in all major languages. Paste your work below and they'll return detailed findings.
  </p>
</div>
