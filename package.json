{
  "name": "error-ferret-monorepo",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=20.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci:install": "pnpm install --frozen-lockfile",
    "build": "pnpm -r --filter @errorferret/types --filter @errorferret/api --filter @errorferret/worker --filter @errorferret/web --filter @errorferret/app run build",
    "dev": "pnpm -r --parallel --filter=@errorferret/api --filter=@errorferret/worker --filter=@errorferret/web --filter=@errorferret/app run dev",
    "dev:app": "pnpm --filter @errorferret/app run dev",
    "dev:web": "pnpm --filter @errorferret/web run dev",
    "dev:api": "pnpm --filter @errorferret/api run dev",
    "dev:worker": "pnpm --filter @errorferret/worker run dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "eslint": "^9.8.0"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
